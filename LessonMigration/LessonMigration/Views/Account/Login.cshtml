@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<div class="col-lg-12 col-xl-11">
    
        <div class="card-body p-md-5">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form class="mx-1 mx-md-4" method="post" asp-action="Login">
                        <div class="d-flex flex-row align-items-center mb-4">
                            <div class="form-outline flex-fill mb-0">
                                <input type="text" id="form3Example1c" class="form-control" asp-for="UsernameorEmail" placeholder="User name or email address" />
                                <span class="text-danger" asp-validation-for="UsernameorEmail"></span>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mb-4">
                            <div class="form-outline flex-fill mb-0">
                                <input type="password" id="form3Example3c" class="form-control" asp-for="Password" placeholder="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
                        </div>
                        <div class="text-center mt-4 font-weight-light">
                            You don't have an account? <a asp-action="Register">Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
